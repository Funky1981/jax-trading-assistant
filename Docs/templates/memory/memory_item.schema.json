{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MemoryItem",
  "type": "object",
  "required": ["ts", "type", "summary", "data", "source"],
  "properties": {
    "id": { "type": "string" },
    "ts": { "type": "string", "format": "date-time" },
    "type": { "type": "string" },
    "symbol": { "type": "string" },
    "tags": {
      "type": "array",
      "maxItems": 10,
      "items": { "type": "string", "pattern": "^[a-z0-9_-]+$" }
    },
    "summary": { "type": "string", "minLength": 1, "maxLength": 500 },
    "data": { "type": "object" },
    "source": {
      "type": "object",
      "required": ["system"],
      "properties": {
        "system": { "type": "string" },
        "ref": { "type": "string" }
      }
    }
  }
}
